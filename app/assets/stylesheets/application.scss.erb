@import "bootstrap-sprockets";
@import "bootstrap";
@import "shared";

.slideshow-overlay {
  width: 100%;
  height: 35px;
  bottom: 0px;
  position: fixed;

  .slideshow-controls {
    opacity: 0.75;
    @extend .text-center;
    position: fixed;
    bottom: 5px;
    width: 100%;

    ul.dropdown-settings-menu {
      width: 260px;
      padding: 10px;

      li {
        margin: 5px;
      }

      select.form-control {
        display: inline-block;
        width: auto;
      }
    }
  }
}

.slideshow-overlay:hover .slideshow-controls {
  opacity: 1;
}


.galleries a.thumbnail {
  max-width: <%= Rails.application.config.x.thumbnail_width %>px;
  margin: 0 auto;
  text-decoration: none;
  margin-bottom: 0px;

  .caption {
    padding-left: 0px;
    padding-right: 0px;
    padding-bottom: 0px;

    p {
      overflow: hidden;
      text-overflow: ellipsis;
      white-space: nowrap;
      verticle-align: top;
      width: 100%;
    }
  }
}

.slideshow {
  background: black;
  position: fixed;
  top: 0px;
  bottom: 0px;
  left: 0px;
  right: 0px;
  width: 100%;
  height: 100%;

  .slides {
    width: 100%;
    height: 100%;
    padding-bottom: 150px;
    text-align: center;
    display: flex;
    align-items: center;

    img.current-img {
      max-height: 100%;
      background: white;
      padding: 5px;
      border-radius: 3px;
      margin: 0 auto;
    }

    img.current-img.rotated-odd {
      max-height: none;
    }

    .thumbnails {
      width: 100%;
      height: 100px;
      position: fixed;
      bottom: 45px;
      left: 0px;

      ul.nav {
        white-space: nowrap;
        position: relative;

        li {
          display: inline-block;
          margin-left: 5px;

          img.thumbnail {
            width: 100px;
            height: 100px;
            float: left;
            padding: 0px;
            margin-bottom: 0px;
          }

          img.thumbnail.active {
            border: 4px solid white;
            border-color: cyan;
          }
        }
      }
    }
  }
}

@media (max-width: $screen-xs-max), (min-width: $screen-sm-min) and (max-width: $screen-sm-max) {
  .slideshow {
    .slides {
      padding-bottom: 45px;
    }
    .thumbnails {
      display: none;
    }
  }
  .slideshow-overlay .slideshow-controls ul.dropdown-settings-menu {
    width: 235px;
    padding: 5px;
  }
}
