<h2 class="text-center">Pixomatix</h2>

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'form-horizontal password-form' }) do |f| %>
  <%= render partial: 'devise/shared/errors', locals: { resource: resource } %>
  <%= f.input :email, placeholder: 'Email', label: false, autofocus: true, input_html: { class: 'input-lg' } %>
  <%= f.button :submit, value: 'Reset Password', class: 'btn btn-info btn-reset-password' %>

  <%- if controller_name != 'sessions' %>
    <div class="line-through">
      <span>or</span>
    </div>

    <%= link_to "Sign In", new_session_path(resource_name), class: 'btn btn-danger btn-sign-in' %>
  <% end -%>

  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <div class="line-through">
      <span>or</span>
    </div>

    <%= link_to "Sign up", new_registration_path(resource_name), class: 'btn btn-success btn-sign-up' %>
  <% end -%>
<% end %>
