<h2 class="text-center">Pixomatix</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'form-horizontal sign-in-form' }) do |f| %>
  <%= render partial: 'devise/shared/errors', locals: { resource: resource } %>
  <% if devise_mapping.rememberable? -%>
    <%= f.hidden_field :remember_me, checked: :checked %>
  <% end -%>

  <%= f.input :email, placeholder: 'Email', label: false, autofocus: true, input_html: { class: 'input-lg' } %>
  <%= f.input :password, placeholder: 'Password', label: false, input_html: { class: 'input-lg' } %>

  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <%= link_to "Forgot your password?", new_password_path(resource_name), class: 'forgot-password' %>
  <% end -%>

  <%= f.button :submit, value: 'Sign In', class: 'btn btn-danger btn-sign-in' %>

  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <div class="line-through">
      <span>or</span>
    </div>

    <%= link_to "Sign up", new_registration_path(resource_name), class: 'btn btn-success btn-sign-up' %>
  <% end -%>
<% end %>
